---
import Layout from '../../layouts/Layout.astro';
import ClientForm from '../../components/ClientForm';

// Explicitly prerender as static page
export const prerender = true;
---

<Layout title="Add Client" requireAuth={true}>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <a href="/clients" class="text-sm text-gray-500 hover:text-gray-700 flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Clients
      </a>
      <h1 class="text-2xl font-bold text-gray-900 mt-4">Add New Client</h1>
      <p class="text-gray-500 mt-1">Add a client to start tracking your relationship</p>
    </div>

    <ClientForm client:load />
  </div>
</Layout>
