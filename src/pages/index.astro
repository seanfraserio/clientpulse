---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Client Relationship Health Monitor" showNav={true}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-indigo-50 via-white to-white">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-indigo-200 rounded-full opacity-30 blur-3xl"></div>
      <div class="absolute top-60 -left-40 w-80 h-80 bg-purple-200 rounded-full opacity-30 blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-24 sm:pt-32 sm:pb-32">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl sm:text-6xl font-bold tracking-tight text-gray-900 mb-6">
          Never lose a client to
          <span class="text-gradient"> silence</span>
        </h1>
        <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto">
          ClientPulse monitors your freelance relationships, tracks commitments,
          and alerts you before small gaps become lost clients.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/login" class="btn-primary btn-lg">
            Start Free Trial
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a href="#features" class="btn-secondary btn-lg">
            See How It Works
          </a>
        </div>
        <p class="mt-4 text-sm text-gray-500">
          Free for up to 5 clients • No credit card required
        </p>
      </div>

      <!-- Dashboard Preview -->
      <div class="mt-16 relative">
        <div class="absolute inset-0 bg-gradient-to-t from-white via-transparent to-transparent z-10 pointer-events-none"></div>
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-200 overflow-hidden max-w-5xl mx-auto">
          <div class="bg-gray-100 px-4 py-3 flex items-center gap-2">
            <div class="flex gap-1.5">
              <div class="w-3 h-3 bg-red-400 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
              <div class="w-3 h-3 bg-green-400 rounded-full"></div>
            </div>
            <div class="flex-1 text-center">
              <span class="text-sm text-gray-500">dashboard.clientpulse.app</span>
            </div>
          </div>
          <div class="p-6 bg-gray-50">
            <!-- Mock Dashboard -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <!-- Needs Attention -->
              <div class="bg-white rounded-xl p-4 border border-gray-200">
                <div class="flex items-center gap-2 mb-3">
                  <span class="w-2 h-2 bg-attention rounded-full animate-pulse"></span>
                  <h3 class="font-semibold text-gray-900">Needs Attention</h3>
                  <span class="badge-attention ml-auto">2</span>
                </div>
                <div class="space-y-2">
                  <div class="p-3 bg-red-50 rounded-lg border border-red-100">
                    <p class="text-sm font-medium text-gray-900">TechCorp Inc</p>
                    <p class="text-xs text-gray-500">No contact in 18 days</p>
                  </div>
                  <div class="p-3 bg-red-50 rounded-lg border border-red-100">
                    <p class="text-sm font-medium text-gray-900">StartupXYZ</p>
                    <p class="text-xs text-gray-500">2 overdue commitments</p>
                  </div>
                </div>
              </div>

              <!-- Watch List -->
              <div class="bg-white rounded-xl p-4 border border-gray-200">
                <div class="flex items-center gap-2 mb-3">
                  <span class="w-2 h-2 bg-watch rounded-full"></span>
                  <h3 class="font-semibold text-gray-900">Watch List</h3>
                  <span class="badge-watch ml-auto">3</span>
                </div>
                <div class="space-y-2">
                  <div class="p-3 bg-yellow-50 rounded-lg border border-yellow-100">
                    <p class="text-sm font-medium text-gray-900">Acme Corp</p>
                    <p class="text-xs text-gray-500">Getting quiet (10 days)</p>
                  </div>
                  <div class="p-3 bg-yellow-50 rounded-lg border border-yellow-100">
                    <p class="text-sm font-medium text-gray-900">BigClient LLC</p>
                    <p class="text-xs text-gray-500">Mixed sentiment lately</p>
                  </div>
                </div>
              </div>

              <!-- Healthy -->
              <div class="bg-white rounded-xl p-4 border border-gray-200">
                <div class="flex items-center gap-2 mb-3">
                  <span class="w-2 h-2 bg-healthy rounded-full"></span>
                  <h3 class="font-semibold text-gray-900">Healthy</h3>
                  <span class="badge-healthy ml-auto">8</span>
                </div>
                <div class="space-y-2">
                  <div class="p-3 bg-green-50 rounded-lg border border-green-100">
                    <p class="text-sm font-medium text-gray-900">DesignStudio</p>
                    <p class="text-xs text-gray-500">Met yesterday</p>
                  </div>
                  <div class="p-3 bg-green-50 rounded-lg border border-green-100">
                    <p class="text-sm font-medium text-gray-900">CloudSoft</p>
                    <p class="text-xs text-gray-500">Active, positive sentiment</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          Everything you need to protect your client relationships
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Stop losing clients to neglect. ClientPulse watches your relationships so you can focus on the work.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="card p-6">
          <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Relationship Radar</h3>
          <p class="text-gray-600">
            See all your clients at a glance, sorted by health status. Know instantly who needs attention and who's thriving.
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="card p-6">
          <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">AI-Powered Insights</h3>
          <p class="text-gray-600">
            Our AI reads your meeting notes, extracts action items, and detects sentiment shifts before you notice them.
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="card p-6">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Commitment Tracker</h3>
          <p class="text-gray-600">
            Never forget what you promised. Track action items for both you and your clients with due date reminders.
          </p>
        </div>

        <!-- Feature 4 -->
        <div class="card p-6">
          <div class="w-12 h-12 bg-yellow-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Smart Alerts</h3>
          <p class="text-gray-600">
            Get notified when a relationship is cooling off. Proactive alerts help you reach out before it's too late.
          </p>
        </div>

        <!-- Feature 5 -->
        <div class="card p-6">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Meeting Briefings</h3>
          <p class="text-gray-600">
            Get AI-generated prep before each meeting with context, pending items, and personal details to remember.
          </p>
        </div>

        <!-- Feature 6 -->
        <div class="card p-6">
          <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Daily Digest</h3>
          <p class="text-gray-600">
            Start each day with a quick summary of who needs attention, upcoming commitments, and relationship changes.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          Simple, transparent pricing
        </h2>
        <p class="text-lg text-gray-600">
          Start free, upgrade when you need more clients
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Free Tier -->
        <div class="card p-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Free</h3>
          <p class="text-gray-600 mb-4">For getting started</p>
          <div class="mb-6">
            <span class="text-4xl font-bold text-gray-900">$0</span>
            <span class="text-gray-500">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Up to 5 clients
            </li>
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              20 notes per month
            </li>
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Basic health tracking
            </li>
          </ul>
          <a href="/login" class="btn-secondary w-full">Get Started</a>
        </div>

        <!-- Pro Tier -->
        <div class="card p-8 border-2 border-indigo-600 relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2">
            <span class="badge-indigo">Most Popular</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Pro</h3>
          <p class="text-gray-600 mb-4">For growing freelancers</p>
          <div class="mb-6">
            <span class="text-4xl font-bold text-gray-900">$12</span>
            <span class="text-gray-500">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Up to 50 clients
            </li>
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Unlimited notes
            </li>
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              AI insights & briefings
            </li>
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Daily digest email
            </li>
          </ul>
          <a href="/login" class="btn-primary w-full">Start Free Trial</a>
        </div>

        <!-- Team Tier -->
        <div class="card p-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Team</h3>
          <p class="text-gray-600 mb-4">For agencies & studios</p>
          <div class="mb-6">
            <span class="text-4xl font-bold text-gray-900">$29</span>
            <span class="text-gray-500">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Up to 200 clients
            </li>
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Everything in Pro
            </li>
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Semantic search
            </li>
            <li class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Priority support
            </li>
          </ul>
          <a href="/login" class="btn-secondary w-full">Start Free Trial</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-indigo-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        Ready to protect your client relationships?
      </h2>
      <p class="text-xl text-indigo-100 mb-8">
        Join hundreds of freelancers who never lose clients to neglect.
      </p>
      <a href="/login" class="inline-flex items-center gap-2 px-8 py-4 bg-white text-indigo-600 font-semibold rounded-xl hover:bg-indigo-50 transition-colors">
        Start Your Free Trial
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <span class="text-lg font-bold text-white">ClientPulse</span>
        </div>

        <div class="flex items-center gap-6 text-sm text-gray-400">
          <a href="/privacy" class="hover:text-white transition-colors">Privacy</a>
          <a href="/terms" class="hover:text-white transition-colors">Terms</a>
          <a href="mailto:support@clientpulse.app" class="hover:text-white transition-colors">Support</a>
        </div>

        <p class="text-sm text-gray-500">
          © 2024 ClientPulse. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</Layout>
