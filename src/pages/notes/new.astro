---
import Layout from '../../layouts/Layout.astro';
import NoteForm from '../../components/NoteForm';

const clientId = Astro.url.searchParams.get('clientId');
---

<Layout title="Add Note" requireAuth={true}>
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <a href={clientId ? `/clients/${clientId}` : '/notes'} class="text-sm text-gray-500 hover:text-gray-700 flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back
      </a>
      <h1 class="text-2xl font-bold text-gray-900 mt-4">Add Meeting Note</h1>
      <p class="text-gray-500 mt-1">Record your meeting notes and let AI extract insights</p>
    </div>

    <NoteForm client:load initialClientId={clientId} />
  </div>
</Layout>
