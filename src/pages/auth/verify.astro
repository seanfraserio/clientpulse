---
import Layout from '../../layouts/Layout.astro';

// This page handles:
// 1. Magic link verification (token param)
// 2. OAuth exchange code (code param) - exchanges for session token
// URL params are read client-side since this is a static site
---

<Layout title="Verifying..." showNav={false}>
  <div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-indigo-50 via-white to-white px-4">
    <div class="w-full max-w-md text-center">
      <!-- Logo -->
      <a href="/" class="inline-flex items-center gap-2 mb-8">
        <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <span class="text-2xl font-bold text-gray-900">ClientPulse</span>
      </a>

      <div class="card p-8">
        <div id="verifying-state">
          <div class="spinner-lg mx-auto mb-4"></div>
          <h1 class="text-xl font-semibold text-gray-900 mb-2">Verifying your link...</h1>
          <p class="text-gray-600">Please wait while we sign you in.</p>
        </div>

        <div id="success-state" class="hidden">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h1 class="text-xl font-semibold text-gray-900 mb-2">You're signed in!</h1>
          <p class="text-gray-600">Redirecting to your dashboard...</p>
        </div>

        <div id="error-state" class="hidden">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>
          <h1 class="text-xl font-semibold text-gray-900 mb-2">Link expired or invalid</h1>
          <p class="text-gray-600 mb-4" id="error-message">This magic link has expired or already been used.</p>
          <a href="/login" class="btn-primary">
            Request a new link
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const API_URL = 'https://clientpulse-api.sfraser.workers.dev';

  function setSessionToken(token: string) {
    localStorage.setItem('session_token', token);
  }

  function showSuccess() {
    document.getElementById('verifying-state')?.classList.add('hidden');
    document.getElementById('success-state')?.classList.remove('hidden');
    setTimeout(() => {
      window.location.href = '/dashboard';
    }, 1000);
  }

  function showError(message: string) {
    document.getElementById('verifying-state')?.classList.add('hidden');
    document.getElementById('error-state')?.classList.remove('hidden');
    const errorMsgEl = document.getElementById('error-message');
    if (errorMsgEl) errorMsgEl.textContent = message;
  }

  async function exchangeCode(code: string): Promise<string> {
    const res = await fetch(`${API_URL}/api/auth/exchange`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ code })
    });

    const data = await res.json();

    if (!res.ok) {
      throw new Error(data.error || 'Exchange failed');
    }

    if (!data.sessionToken) {
      throw new Error('No session token received');
    }

    return data.sessionToken;
  }

  async function verifyMagicLink(token: string): Promise<string> {
    const res = await fetch(`${API_URL}/api/auth/verify?token=${encodeURIComponent(token)}&returnToken=true`);
    const data = await res.json();

    if (!res.ok) {
      throw new Error(data.error || 'Verification failed');
    }

    if (!data.sessionToken) {
      throw new Error('No session token received');
    }

    return data.sessionToken;
  }

  async function handleAuth() {
    // Read URL params client-side (since this is a static site)
    const urlParams = new URLSearchParams(window.location.search);
    const code = urlParams.get('code');      // OAuth exchange code
    const token = urlParams.get('token');    // Magic link token

    // Case 1: OAuth callback with exchange code
    if (code) {
      try {
        console.log('[Verify] Exchanging OAuth code for session');
        const sessionToken = await exchangeCode(code);
        setSessionToken(sessionToken);
        console.log('[Verify] Session token stored');
        showSuccess();
      } catch (err) {
        console.error('[Verify] Exchange failed:', err);
        showError(err instanceof Error ? err.message : 'OAuth verification failed');
      }
      return;
    }

    // Case 2: Magic link verification
    if (token) {
      try {
        console.log('[Verify] Verifying magic link');
        const sessionToken = await verifyMagicLink(token);
        setSessionToken(sessionToken);
        console.log('[Verify] Session token stored');
        showSuccess();
      } catch (err) {
        console.error('[Verify] Magic link verification failed:', err);
        showError(err instanceof Error ? err.message : 'Link expired or invalid');
      }
      return;
    }

    // No token or code provided
    showError('No verification token provided.');
  }

  handleAuth();
</script>
